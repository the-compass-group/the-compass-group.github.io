---
import Container from "../shared/Container.astro";
---

<section class="relative mt-12 md:mt-16 bg-primary dark:bg-primary-700">
  <Container>
    <div class="mx-auto lg:mx-0 p-5 sm:p-6 py-6 sm:py-8 grid grid-cols-3 justify-evenly">
      <div class="text-left">
        <h3 class="font-semibold text-xl md:text-3xl text-heading-1">
          Thriving Business
        </h3>
      </div>

      <div class="text-center">
        <h3 class="font-semibold text-xl md:text-3xl text-heading-1">
          Freedom of Time
        </h3>
      </div>

      <div class="text-right">
        <h3 class="font-semibold text-xl md:text-3xl text-heading-1">
          Peace of Mind
        </h3>
      </div>
    </div>
  </Container>
</section>
