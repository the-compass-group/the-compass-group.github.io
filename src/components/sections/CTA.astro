---
import BtnLink from "../shared/BtnLink.astro";
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section  id="cta" class="pb-20">
  <Container>
    <div class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900">
      <div class="absolute right-0 top-0 h-full w-full flex justify-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
            <span
              class="absolute w-16 h-16 -top-1 -right-1 bg-primary-800 rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -right-1 bg-primary rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary-200 rounded-md rotate-45"
            ></span>
          </div>
      </div>

      <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
            <span
              class="absolute w-16 h-16 -top-1 -right-1 bg-primary-800 rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -right-1 bg-primary rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary-200 rounded-md rotate-45"
            ></span>
          </div>
      </div>

      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1"
        >
          Get Started in <span class="text-primary-800">3</span> Simple Steps
        </h1>
        <Paragraph className={"pt-10"}>
          <ol class="list-decimal list-outside text-left dark:text-white text-xl">
            <li><span class="text-primary-800">Book your free discovery call</span> - click the button below to schedule your free discovery call.</li>
            <li><span class="text-primary-800">Formulate a plan</span> - I will work with you to build a plan to elevate your business.</li>
            <li><span class="text-primary-800">Implement the plan</span> - I'll help you execute to unlock the success your business deserves</li>
          </ol>
        </Paragraph>
        <div class="flex">
          <div class="mx-auto pt-10">
            <div class="lg:min-w-max flex items-center sm:w-max w-full pb-6 lg:pb-0 border-b border-box-bg lg:border-0 px-6 lg:px-0">
              <BtnLink text="Book Your Free Discovery Call" href="https://thecompassgroup.zohobookings.com/#/thecompassgroup" className="flex justify-center w-full sm:w-max" variant="primary"/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
