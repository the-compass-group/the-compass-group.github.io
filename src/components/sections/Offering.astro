---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import Button from "../shared/Button.astro";
---

<section id="features" class="bg-neutral-50 dark:bg-neutral-900 py-20">
    <h1 class="text-center text-heading-1 font-semibold text-2xl sm:text-3xl md:text-4xl">
        Thinking about Starting a Business?
    </h1>
    <Paragraph className="mt-4 text-center text-l sm:text-xl md:text-2xl">Then download this <span class="text-primary-800">free</span> assessment to see how prepared you are:</Paragraph>
    <Container className="flex flex-col md:flex-row gap-10 lg:gap-12 mt-12">
        <div class="flex-1 flex md:w-7/12 lg:w-1/2 flex-col bg-none">
            <iframe aria-label='Thinking about Starting a Business?' frameborder="0" style="height:750px;width:99%;border:none;" src='https://forms.zohopublic.com/greggthec1/form/ThinkingaboutStartingaBusiness/formperma/DXbmJkwuiet0-AjpgLN5t1eSJtx4Whad7q9cvwny3XA'></iframe>
        </div>

        <div class="max-w-md mx-auto midmd:max-w-none lg:mx-0  lg:pr-10 xl:pr-2 flex-1 flex w-11/12 midmd:w-5/12 lg:w-1/2 midmd:h-auto">
            <div class="w-full h-80 sm:h-96 midmd:h-full relative">
                <div class="absolute rotate-45 -left-5 md:-left-10 lg:-left-20 xl:-left-24 p-1 top-1/2 w-16 h-16 bg-gradient-to-br from-primary to-primary-400 blur-3xl opacity-50"></div>
                <div class="absolute  p-1 -top-4 md:-top-10 right-0 w-20 h-20 bg-gradient-to-br from-primary to-primary-400 rounded-full blur-3xl opacity-60"></div>
                
                <span class="absolute w-full aspect-[16/5] -skew-x-12 rounded-full bg-gradient-to-tr from-primary to-primary-400 opacity-40 blur-2xl left-0 bottom-0"></span>
                <img src={"/images/offering_thumbnail.png"} alt="Offering Think It! Map It! Do It!" 
                width="1240" height="1385"
                class=" w-auto rounded-3xl left-1/2 -translate-x-1/2 absolute bottom-0 max-h-full" />
            </div>
        </div>
    </Container>
</section>
